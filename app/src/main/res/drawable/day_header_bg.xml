<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid
                android:width="2dp"
                android:color="@color/dayHeaderBg"/>
        </shape>
    </item>
    <!-- Top and Bottom Border -->
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/dayHeaderFg"/>
        </shape>
    </item>
    <!-- Side Border -->
    <item
        android:top="-1.5dp"
        android:bottom="-1.5dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/dayHeaderFg"/>
        </shape>
    </item>
</layer-list>