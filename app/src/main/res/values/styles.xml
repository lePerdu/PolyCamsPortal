<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ScheduleHeader" parent="@style/AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/hack</item>
        <item name="android:textColor">@color/scheduleHeaderFg</item>
        <item name="android:background">@drawable/schedule_header_bg</item>
    </style>
    <style name="DaysHeader" parent="@style/AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/hack</item>
        <item name="android:textColor">@color/dayRowFg</item>
        <item name="android:background">@drawable/day_header_bg</item>
    </style>
    <style name="DaysRow" parent="@style/AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/hack</item>
        <item name="android:textColor">@color/dayRowFg</item>
        <item name="android:background">@drawable/day_bg</item>
    </style>
    <style name="DayBg" parent="@style/AppTheme">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/hack</item>
        <item name="android:textColor">@color/dayRowFg</item>
        <item name="android:background">@drawable/day_bg</item>
    </style>
    <style name="DayRow" parent="@style/AppTheme">
        <item name=""
    </style>
</resources>
